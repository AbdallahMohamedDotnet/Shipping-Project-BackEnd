@model List<BL.Dtos.DTOShipingPackging>
@{
    ViewData["Title"] = "Shipping Packaging Types";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Shipping Packaging Types</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Shipping Packaging</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Manage Shipping Packaging Types</h3>
                            <div class="card-tools">
                                <a href="@Url.Action("Edit")" class="btn btn-primary btn-sm">
                                    <i class="fas fa-plus"></i> Add New
                                </a>
                            </div>
                        </div>
                        <div class="card-body">
                            @if (TempData["MessageType"] != null)
                            {
                                var messageType = TempData["MessageType"].ToString();
                                var alertClass = messageType.Contains("Success") ? "alert-success" : "alert-danger";
                                var message = messageType switch
                                {
                                    "SaveSucess" => "Record saved successfully!",
                                    "SaveFailed" => "Failed to save record!",
                                    "DeleteSuccess" => "Record deleted successfully!",
                                    "DeleteFailed" => "Failed to delete record!",
                                    _ => "Operation completed."
                                };
                                <div class="alert @alertClass alert-dismissible fade show" role="alert">
                                    @message
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            }

                            <table id="packagingTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Arabic Name</th>
                                        <th>English Name</th>
                                        <th>Created Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ShipingPackgingAname</td>
                                            <td>@item.ShipingPackgingEname</td>
                                            <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <a href="@Url.Action("Edit", new { id = item.Id })" 
                                                   class="btn btn-warning btn-sm">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>
                                                <a href="@Url.Action("Delete", new { id = item.Id })" 
                                                   class="btn btn-danger btn-sm" 
                                                   onclick="return confirm('Are you sure you want to delete this item?')">
                                                    <i class="fas fa-trash"></i> Delete
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#packagingTable').DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#packagingTable_wrapper .col-md-6:eq(0)');
        });
    </script>
}