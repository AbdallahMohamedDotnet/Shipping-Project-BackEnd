@model List<BL.DTOConfiguration.DTOShipment>
@{
    ViewData["Title"] = "Shipments Management";
}

<!-- Breadcroumbs start -->
<div class="wshipping-content-block breadcrumbs-block">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Shipments</li>
        </ol>
    </div>
</div>
<!-- Breadcroumbs end -->

<!-- Shipments List Start -->
<div class="wshipping-content-block shipping-block">
    <div class="container">
        <h2 class="heading2-border mt0">Shipments Management</h2>
        
        @* Display success messages *@
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        
        <div class="row">
            <div class="col-12">
                <div class="shipment-card">
                    <div class="shipment-card-body">
                        <div class="row mb-3">
                            <div class="col-12">
                                <a href="/Shipment/Create" class="btn btn-primary btn-fw shipment-create-btn">
                                    <i class="fa fa-plus"></i> Create New Shipment
                                </a>
                            </div>
                        </div>
                        
                        @if (Model != null && Model.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover shipments-table">
                                    <thead>
                                        <tr>
                                            <th>Tracking Number</th>
                                            <th>Shipping Date</th>
                                            <th>Delivery Date</th>
                                            <th>Sender</th>
                                            <th>Receiver</th>
                                            <th>Weight (kg)</th>
                                            <th>Package Value</th>
                                            <th>Shipping Rate</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var shipment in Model)
                                        {
                                            <tr class="shipment-row">
                                                <td>
                                                    @if (shipment.TrackingNumber.HasValue)
                                                    {
                                                        <strong class="tracking-number">@shipment.TrackingNumber.Value.ToString("F0")</strong>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td class="shipment-date">@shipment.ShipingDate.ToString("MMM dd, yyyy")</td>
                                                <td class="shipment-date">@shipment.DelivryDate.ToString("MMM dd, yyyy")</td>
                                                <td class="shipment-party">
                                                    @if (shipment.UserSender != null)
                                                    {
                                                        @shipment.UserSender.SenderName
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td class="shipment-party">
                                                    @if (shipment.UserReceiver != null)
                                                    {
                                                        @shipment.UserReceiver.ReceiverName
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td class="shipment-weight">@shipment.Weight kg</td>
                                                <td class="shipment-value">$@shipment.PackageValue.ToString("F2")</td>
                                                <td class="shipment-rate">$@shipment.ShippingRate.ToString("F2")</td>
                                                <td>
                                                    @if (shipment.CurrentState == 1)
                                                    {
                                                        <span class="shipment-badge shipment-badge-success">Active</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="shipment-badge shipment-badge-danger">Inactive</span>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="shipment-btn-group" role="group">
                                                        <a href="/Shipment/Show/@shipment.Id" class="btn btn-info btn-sm shipment-btn">
                                                            <i class="fa fa-eye"></i> View
                                                        </a>
                                                        <a href="/Shipment/Edit/@shipment.Id" class="btn btn-warning btn-sm shipment-btn">
                                                            <i class="fa fa-edit"></i> Edit
                                                        </a>
                                                        @if (shipment.CurrentState == 1)
                                                        {
                                                            <button type="button" class="btn btn-danger btn-sm shipment-btn" 
                                                                    data-id="@shipment.Id" 
                                                                    data-tracking="@(shipment.TrackingNumber?.ToString("F0") ?? "Unknown")"
                                                                    onclick="confirmDelete(this)">
                                                                <i class="fa fa-trash"></i> Delete
                                                            </button>
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="shipment-empty-state">
                                <h4>No Shipments Found</h4>
                                <p>There are currently no shipments in the system.</p>
                                <a href="/Shipment/Create" class="btn btn-primary shipment-create-btn">
                                    <i class="fa fa-plus"></i> Create Your First Shipment
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shipments List End -->

@section Scripts
{
    <script>
        function confirmDelete(button) {
            var id = $(button).data('id');
            var tracking = $(button).data('tracking');
            var deleteUrl = '/Shipment/Delete';

            if (confirm('Are you sure you want to delete shipment "' + tracking + '"? This action cannot be undone.')) {
                window.location.href = deleteUrl + '/' + id;
            }
        }

        // Display message types
        @if (TempData["MessageType"] != null)
        {
            <text>
            $(document).ready(function () {
                let messageType = @TempData["MessageType"];
                
                switch (messageType) {
                    case 1: // SaveSuccess
                        showBootstrapAlert('success', 'Success', 'Shipment saved successfully!');
                        break;
                    case 2: // SaveFailed
                        showBootstrapAlert('danger', 'Error', 'Failed to save shipment.');
                        break;
                    case 3: // DeleteSuccess
                        showBootstrapAlert('success', 'Success', 'Shipment deleted successfully!');
                        break;
                    case 4: // DeleteFailed
                        showBootstrapAlert('danger', 'Error', 'Failed to delete shipment.');
                        break;
                    default:
                        console.log("Unknown message type");
                        break;
                }
            });

            function showBootstrapAlert(type, title, message) {
                var alertHtml = '<div class="alert alert-' + type + ' alert-dismissible fade show" role="alert">' +
                    '<strong>' + title + ':</strong> ' + message +
                    '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>' +
                    '</div>';
                
                $('.wshipping-content-block.shipping-block .container').prepend(alertHtml);
                
                // Auto-hide after 5 seconds
                setTimeout(function() {
                    $('.alert').fadeOut('slow');
                }, 5000);
            }
            </text>
        }
    </script>
}

@section Styles
{
    <style>
        /* Shipment Index Page Theme-Aware Styles */
        
        /* Main card styling using theme variables */
        .shipment-card {
            background-color: var(--card-bg);
            border: 1px solid var(--border-light);
            border-radius: 8px;
            box-shadow: 0 4px 12px var(--shadow-light);
            margin-bottom: 2rem;
            transition: all 0.3s ease;
        }

        .shipment-card-body {
            padding: 2rem;
            background-color: var(--card-bg);
            color: var(--text-primary);
        }

        /* Table styling with theme support */
        .shipments-table {
            font-size: 14px;
            background-color: var(--card-bg);
            color: var(--text-primary);
            border-collapse: separate;
            border-spacing: 0;
            border-radius: 8px;
            overflow: hidden;
        }

        .shipments-table thead th {
            background-color: var(--bg-tertiary);
            color: var(--text-primary);
            font-weight: 600;
            border: none;
            padding: 1rem 0.75rem;
            border-bottom: 2px solid var(--border-light);
            position: relative;
        }

        .shipments-table tbody td {
            color: var(--text-primary);
            border-bottom: 1px solid var(--border-light);
            padding: 0.75rem;
            background-color: var(--card-bg);
            transition: background-color 0.2s ease;
        }

        .shipment-row:hover td {
            background-color: var(--bg-secondary);
        }

        /* Specific cell styling */
        .tracking-number {
            color: var(--primary-color);
            font-weight: 600;
        }

        .shipment-date,
        .shipment-weight,
        .shipment-value,
        .shipment-rate {
            color: var(--text-primary);
        }

        .shipment-party {
            color: var(--text-primary);
            font-weight: 500;
        }

        /* Badge styling with theme support */
        .shipment-badge {
            font-size: 11px;
            padding: 6px 12px;
            border-radius: 20px;
            font-weight: 500;
            display: inline-block;
            transition: all 0.2s ease;
        }

        .shipment-badge-success {
            background-color: #28a745;
            color: #ffffff;
        }

        .shipment-badge-danger {
            background-color: #dc3545;
            color: #ffffff;
        }

        /* Button group styling */
        .shipment-btn-group {
            display: flex;
            gap: 0.25rem;
            flex-wrap: wrap;
        }

        .shipment-btn {
            transition: all 0.2s ease;
            border-radius: 4px;
            font-size: 0.8rem;
            padding: 0.375rem 0.75rem;
        }

        .shipment-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 2px 4px var(--shadow-light);
        }

        /* Create button styling */
        .shipment-create-btn {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            color: #ffffff;
            font-weight: 500;
            padding: 0.6rem 1.5rem;
            border-radius: 6px;
            transition: all 0.2s ease;
        }

        .shipment-create-btn:hover {
            background-color: var(--primary-dark);
            border-color: var(--primary-dark);
            color: #ffffff;
            transform: translateY(-1px);
            box-shadow: 0 4px 8px var(--shadow-medium);
        }

        /* Heading styling */
        .heading2-border {
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 3px solid var(--primary-color);
            color: var(--text-primary);
            font-weight: 600;
            position: relative;
        }

        .heading2-border::after {
            content: '';
            position: absolute;
            bottom: -3px;
            left: 0;
            width: 60px;
            height: 3px;
            background-color: var(--primary-light);
            border-radius: 2px;
        }

        /* Empty state styling */
        .shipment-empty-state {
            text-align: center;
            padding: 3rem 2rem;
            background-color: var(--bg-secondary);
            border-radius: 8px;
            border: 2px dashed var(--border-light);
        }

        .shipment-empty-state h4 {
            color: var(--text-primary);
            margin-bottom: 1rem;
            font-weight: 500;
        }

        .shipment-empty-state p {
            color: var(--text-secondary);
            margin-bottom: 2rem;
        }

        /* Breadcrumb styling */
        .breadcrumbs-block {
            background-color: var(--bg-secondary);
            border-bottom: 1px solid var(--border-light);
            padding: 1rem 0;
        }

        .breadcrumb {
            background-color: transparent;
            margin-bottom: 0;
            padding: 0;
        }

        .breadcrumb-item {
            color: var(--text-secondary);
        }

        .breadcrumb-item a {
            color: var(--primary-color);
            text-decoration: none;
        }

        .breadcrumb-item a:hover {
            color: var(--primary-dark);
        }

        .breadcrumb-item.active {
            color: var(--text-secondary);
        }

        .breadcrumb-item + .breadcrumb-item::before {
            content: '/';
            color: var(--text-tertiary);
            padding: 0 0.5rem;
        }

        /* Content block styling */
        .wshipping-content-block {
            background-color: var(--bg-primary);
            color: var(--text-primary);
        }

        .shipping-block {
            padding: 3rem 0;
        }

        /* Alert styling */
        .alert {
            border-radius: 6px;
            border: none;
            margin-bottom: 1.5rem;
            padding: 1rem 1.25rem;
        }

        .alert-success {
            background-color: rgba(40, 167, 69, 0.1);
            color: #155724;
            border-left: 4px solid #28a745;
        }

        .alert-danger {
            background-color: rgba(220, 53, 69, 0.1);
            color: #721c24;
            border-left: 4px solid #dc3545;
        }

        .alert-info {
            background-color: rgba(23, 162, 184, 0.1);
            color: #0c5460;
            border-left: 4px solid #17a2b8;
        }

        /* Dark theme specific overrides */
        [data-theme="dark"] .alert-success {
            background-color: rgba(40, 167, 69, 0.15);
            color: #d4edda;
        }

        [data-theme="dark"] .alert-danger {
            background-color: rgba(220, 53, 69, 0.15);
            color: #f8d7da;
        }

        [data-theme="dark"] .alert-info {
            background-color: rgba(23, 162, 184, 0.15);
            color: #d1ecf1;
        }

        /* Enhanced alert close button */
        .alert .btn-close {
            position: absolute;
            top: 0.5rem;
            right: 0.75rem;
            background: none;
            border: none;
            color: inherit;
            opacity: 0.7;
            font-size: 1.2rem;
            cursor: pointer;
        }

        .alert .btn-close:hover {
            opacity: 1;
        }

        /* Text muted styling for theme consistency */
        .text-muted {
            color: var(--text-tertiary) !important;
        }

        /* Responsive design */
        @@media (max-width: 768px) {
            .shipment-card-body {
                padding: 1rem;
            }

            .shipments-table {
                font-size: 12px;
            }

            .shipments-table thead th,
            .shipments-table tbody td {
                padding: 0.5rem 0.25rem;
            }

            .shipment-btn-group {
                flex-direction: column;
                gap: 0.25rem;
            }

            .shipment-btn {
                font-size: 0.75rem;
                padding: 0.25rem 0.5rem;
            }

            .heading2-border {
                font-size: 1.5rem;
                margin-bottom: 1.5rem;
            }
        }

        @@media (max-width: 576px) {
            .table-responsive {
                border: none;
                border-radius: 8px;
                overflow-x: auto;
            }

            .shipments-table {
                min-width: 800px;
            }

            .shipment-empty-state {
                padding: 2rem 1rem;
            }
        }

        /* Animation for smooth transitions */
        @@media (prefers-reduced-motion: no-preference) {
            .shipment-card,
            .shipments-table tbody tr,
            .shipment-btn,
            .shipment-create-btn {
                transition: all 0.3s ease;
            }
        }

        /* Focus states for accessibility */
        .shipment-btn:focus,
        .shipment-create-btn:focus {
            outline: 2px solid var(--primary-color);
            outline-offset: 2px;
            box-shadow: 0 0 0 3px rgba(235, 0, 40, 0.2);
        }

        /* High contrast mode support */
        @@media (prefers-contrast: high) {
            .shipment-card {
                border-width: 2px;
            }

            .shipments-table thead th {
                border-bottom-width: 3px;
            }

            .shipment-badge {
                border: 1px solid currentColor;
            }
        }

        /* Print styles */
        @@media print {
            .shipment-btn-group,
            .shipment-create-btn {
                display: none;
            }

            .shipment-card {
                box-shadow: none;
                border: 1px solid #000;
            }

            .shipments-table {
                border-collapse: collapse;
            }

            .shipments-table thead th,
            .shipments-table tbody td {
                border: 1px solid #000;
                background-color: white;
                color: black;
            }
        }
    </style>
}